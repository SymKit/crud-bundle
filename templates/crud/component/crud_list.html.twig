<div {{ attributes }} data-loading="addClass(opacity-50 pointer-events-none duration-200)">
    <div
        class="bg-white dark:bg-gray-800 shadow-sm border border-slate-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <div class="overflow-x-auto relative">
            <div data-loading="removeClass(hidden) addClass(flex)"
                class="hidden absolute inset-0 z-10 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm items-center justify-center">
                <div class="flex flex-col items-center gap-2">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
                    <span class="text-sm font-medium text-indigo-600 dark:text-indigo-400">Loading...</span>
                </div>
            </div>
            <table class="min-w-full text-left">
                <thead>
                    <tr class="bg-slate-50/50 dark:bg-gray-800/50 border-b border-slate-200 dark:border-gray-700">
                        {% for field, config in this.listFields %}
                        {% set isSortable = config.sortable|default(false) %}
                        <th
                            class="py-3 px-6 text-xs font-semibold text-slate-500 dark:text-gray-400 uppercase tracking-wider {{ config.header_class|default('') }}">
                            {% if isSortable %}
                            <button type="button"
                                class="group flex items-center gap-1 cursor-pointer hover:text-slate-700 dark:hover:text-gray-200 transition-colors {{ config.header_align|default('justify-start') }}"
                                data-action="live#action" data-live-action-param="changeSort"
                                data-live-column-param="{{ field }}">
                                {{ config.label|trans }}

                                {% if this.sortBy == field %}
                                {% if this.sortDirection == 'asc' %}
                                {{ ux_icon('heroicons:bars-arrow-up-20-solid', {class: 'w-4 h-4 text-indigo-500'}) }}
                                {% else %}
                                {{ ux_icon('heroicons:bars-arrow-down-20-solid', {class: 'w-4 h-4 text-indigo-500'}) }}
                                {% endif %}
                                {% else %}
                                {{ ux_icon('heroicons:chevron-up-down-20-solid', {class: 'w-4 h-4 text-slate-300
                                dark:text-gray-600 group-hover:text-slate-400 dark:group-hover:text-gray-500
                                transition-colors'}) }}
                                {% endif %}
                            </button>
                            {% else %}
                            <div class="flex items-center gap-1 {{ config.header_align|default('justify-start') }}">
                                {{ config.label|trans }}
                            </div>
                            {% endif %}
                        </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 dark:divide-gray-700/50">
                    {% for entity in this.entities %}
                    <tr class="hover:bg-slate-50/80 dark:hover:bg-gray-700/30 transition-colors group">
                        {% for field, config in this.listFields %}
                        <td
                            class="py-3 px-6 text-sm text-slate-900 dark:text-white {{ config.cell_class|default('') }}">
                            {% if config.template is defined %}
                            {{ include(config.template, {entity: entity, field: field, config: config}) }}
                            {% else %}
                            {{ attribute(entity, field) }}
                            {% endif %}
                        </td>
                        {% endfor %}
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="{{ this.listFields|length }}"
                            class="py-12 text-center text-slate-500 dark:text-gray-400">
                            <div class="flex flex-col items-center gap-2">
                                <div class="p-3 rounded-full bg-slate-100 dark:bg-gray-700 text-slate-400">
                                    {{ ux_icon('heroicons:magnifying-glass-20-solid', {class: 'w-6 h-6'}) }}
                                </div>
                                <p class="text-base font-medium text-slate-900 dark:text-white">No results found.</p>
                                <p class="text-sm">Try adjusting your filters.</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if this.entities.count > this.limit %}
        <div
            class="px-6 py-4 border-t border-slate-200 dark:border-gray-700 flex items-center justify-between bg-slate-50/50 dark:bg-gray-800/50">
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-slate-700 dark:text-gray-300">
                        Showing
                        <span class="font-medium">{{ this.minKey }}</span>
                        to
                        <span class="font-medium">{{ this.maxKey(this.entities.count) }}</span>
                        of
                        <span class="font-medium">{{ this.entities.count }}</span>
                        results
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-lg shadow-sm -space-x-px" aria-label="Pagination">
                        <button type="button" data-action="live#update" data-model="page"
                            data-value="{{ this.page - 1 }}" {{ this.page==1 ? 'disabled' : '' }}
                            class="relative inline-flex items-center px-2 py-2 rounded-l-lg border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-slate-500 dark:text-gray-400 hover:bg-slate-50 dark:hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                            <span class="sr-only">Previous</span>
                            {{ ux_icon('heroicons:chevron-left-20-solid', {class: 'h-5 w-5'}) }}
                        </button>
                        <button type="button" data-action="live#update" data-model="page"
                            data-value="{{ this.page + 1 }}" {{ (this.page * this.limit)>= this.entities.count ?
                            'disabled' : '' }}
                            class="relative inline-flex items-center px-2 py-2 rounded-r-lg border border-slate-300
                            dark:border-gray-600 bg-white dark:bg-gray-800 text-sm font-medium text-slate-500
                            dark:text-gray-400 hover:bg-slate-50 dark:hover:bg-gray-700 disabled:opacity-50
                            disabled:cursor-not-allowed transition-colors">
                            <span class="sr-only">Next</span>
                            {{ ux_icon('heroicons:chevron-right-20-solid', {class: 'h-5 w-5'}) }}
                        </button>
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>