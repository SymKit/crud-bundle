<div {{ attributes }}>
    {{ form_start(form, {
    attr: {
    'data-model': '*',
    'data-action': 'live#action',
    'data-live-action-param': 'updateFilter',
    'onsubmit': 'return false;'
    }
    }) }}
    <div class="mb-4 flex flex-wrap gap-4 items-end py-4">
        <div class="flex-1 min-w-[300px]">
            {{ form_widget(form.q, {
            icon: 'heroicons:magnifying-glass-20-solid',
            attr: {
            'data-action': 'live#action',
            'data-live-action-param': 'debounce(300)|updateFilter',
            'placeholder': 'crud.component.filters.search_placeholder'|trans({}, 'SymkitCrud')
            }
            }) }}
        </div>

        <div data-loading="show" class="pb-2">
            <div class="flex items-center">
                <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-indigo-600"></div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>