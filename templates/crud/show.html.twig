{% extends base_layout %}

{% block page_title %}{{ page_title|trans }}{% endblock %}
{% block page_description %}{{ page_description|trans }}{% endblock %}

{% block header_actions %}
    {% if show_back|default(false) %}
        {{ component('BackLink', {
            route: back_route,
            routeParams: back_route_params|default({}),
            label: back_label|default('Back')
        }) }}
    {% endif %}
{% endblock %}

{% block body %}
{# Generate section IDs #}
{% set section_ids = {} %}
{% for id, section in show_sections %}
    {% set section_ids = section_ids|merge({(id): 'section-' ~ id}) %}
{% endfor %}

<div class="max-w-7xl mx-auto flex flex-col lg:flex-row gap-6 items-start" data-controller="crud--section-nav">
    
    {# ========== STICKY NAVIGATION ========== #}
    {% if show_sections|length > 1 %}
    <nav class="hidden lg:block w-56 flex-shrink-0 lg:sticky lg:top-24">
        <div class="bg-white dark:bg-gray-800/50 rounded-lg shadow-sm border border-slate-200 dark:border-white/10 overflow-hidden">
            <div class="p-4 bg-slate-50 dark:bg-white/5 border-b border-slate-100 dark:border-white/5">
                <h3 class="text-xs font-bold text-slate-500 dark:text-gray-400 uppercase tracking-wider">Navigation</h3>
            </div>
            <ul class="text-sm" data-crud--section-nav-target="navList">
                {% for id, section in show_sections %}
                <li>
                    <a href="#{{ section_ids[id] }}" 
                       data-section-id="{{ section_ids[id] }}"
                       data-crud--section-nav-target="navLink"
                       data-action="click->crud--section-nav#scrollTo"
                       class="flex items-center gap-2 px-4 py-3 border-l-2 border-transparent text-slate-600 dark:text-gray-400 hover:bg-slate-50 dark:hover:bg-white/5 hover:text-slate-900 dark:hover:text-white transition-colors">
                        {% if section.icon is defined and section.icon %}
                            {{ ux_icon(section.icon, {class: 'w-4 h-4'}) }}
                        {% endif %}
                        {{ section.label|trans }}
                    </a>
                </li>
                {% endfor %}
                {% block extra_nav_items %}
                {% endblock %}
            </ul>
        </div>
    </nav>
    {% endif %}

    {# ========== MAIN CONTENT ========== #}
    <div class="flex-1 space-y-6 pb-6">
        {% for id, section in show_sections %}
        <section id="{{ section_ids[id] }}" 
                 class="scroll-mt-28"
                 data-crud--section-nav-target="section">
            <div class="bg-white dark:bg-gray-800/50 rounded-xl shadow-sm border border-slate-200 dark:border-white/10 overflow-hidden">
                <div class="{{ section.full_width|default(false) ? 'flex flex-col' : 'lg:grid lg:grid-cols-3 lg:gap-0' }}">
                    {# Section Header #}
                    <div class="{{ section.full_width|default(false) ? 'w-full' : 'lg:col-span-1' }} bg-slate-50/80 dark:bg-white/5 p-6 border-b {{ section.full_width|default(false) ? '' : 'lg:border-b-0 lg:border-r' }} border-slate-100 dark:border-white/5">
                        <h3 class="text-base font-semibold text-slate-900 dark:text-white flex items-center gap-2">
                            {% if section.icon is defined and section.icon %}
                                {{ ux_icon(section.icon, {class: 'w-5 h-5 text-slate-500 dark:text-gray-400'}) }}
                            {% endif %}
                            {{ section.label|trans }}
                        </h3>
                        {% if section.description is defined and section.description %}
                        <p class="mt-1 text-xs text-slate-500 dark:text-gray-400 leading-relaxed">
                            {{ section.description|trans }}
                        </p>
                        {% endif %}
                    </div>

                    {# Data Fields #}
                    <div class="{{ section.full_width|default(false) ? 'w-full' : 'lg:col-span-2' }} p-6">
                        <dl class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-2">
                            {% for field, config in section.fields %}
                                {% if field != 'actions' %}
                                    {% set is_full_width = section.full_width|default(false) or config.row_class|default('') matches '/col-span-2/' %}
                                    <div class="flex flex-col gap-1 {{ is_full_width ? 'sm:col-span-2' : '' }} {{ config.row_class|default('') }}">
                                        {% if config.label is not defined or config.label is not same as(false) %}
                                            <dt class="text-xs font-bold text-slate-500 dark:text-gray-400 uppercase tracking-wider">
                                                {{ config.label|default(field|capitalize)|trans }}
                                            </dt>
                                        {% endif %}
                                        <dd class="text-sm text-slate-900 dark:text-white">
                                            {% if config.template is defined %}
                                                {{ include(config.template, {entity: entity, field: field, config: config}) }}
                                            {% else %}
                                                <div class="leading-relaxed {{ config.cell_class|default('') }}">
                                                    {{ attribute(entity, field)|nl2br }}
                                                </div>
                                            {% endif %}
                                        </dd>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </dl>
                    </div>
                </div>
            </div>
        </section>
        {% endfor %}

        {% block after_detail %}
            {% if after_detail_template is defined and after_detail_template is not null %}
                {{ include(after_detail_template) }}
            {% endif %}
        {% endblock %}

        {# ========== BOTTOM STICKY ACTIONS ========== #}
        <div class="sticky bottom-4 bg-white dark:bg-gray-800/95 rounded-xl shadow-lg border border-slate-200 dark:border-white/10 backdrop-blur py-4 px-6 flex items-center justify-end gap-3">
             <a href="{{ path(back_route) }}" 
                class="inline-flex items-center justify-center gap-2 py-2.5 px-4 rounded-lg bg-white dark:bg-gray-700 text-slate-900 dark:text-white text-sm font-medium border border-slate-200 dark:border-white/10 shadow-sm hover:bg-slate-50 dark:hover:bg-gray-600 transition-all cursor-pointer">
                {{ ux_icon('heroicons:arrow-left-20-solid', {class: 'w-4 h-4'}) }}
                {{ 'Retour'|trans }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
