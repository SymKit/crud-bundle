{% macro render_status(isActive, activeLabel = 'Active', inactiveLabel = 'Inactive') %}
{% if isActive %}
<span
    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-50 text-green-700 ring-1 ring-inset ring-green-600/20">
    {{ ux_icon('heroicons:check-circle-20-solid', {class: 'w-3 h-3 mr-1'}) }}
    {{ activeLabel }}
</span>
{% else %}
<span
    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-50 text-slate-600 ring-1 ring-inset ring-slate-500/10">
    {{ ux_icon('heroicons:x-circle-20-solid', {class: 'w-3 h-3 mr-1'}) }}
    {{ inactiveLabel }}
</span>
{% endif %}
{% endmacro %}