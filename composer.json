{
    "name": "symkit/crud-bundle",
    "description": "Symfony bundle for CRUD, Live lists (filters, sort, pagination), form types and extensions, Twig components (RichSelect, Slug, Password, Translatable, BackLink, DeleteForm, CrudList, CrudFilters), Tailwind theme and Stimulus",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Symkit\\CrudBundle\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2",
        "doctrine/orm": "^3.6",
        "symkit/metadata-bundle": "^0.0.1",
        "symfony/framework-bundle": "^7.0 || ^8.0",
        "symfony/form": "^7.0 || ^8.0",
        "symfony/string": "^7.0 || ^8.0",
        "symfony/translation": "^7.0 || ^8.0",
        "symfony/ux-icons": "2.*",
        "symfony/ux-live-component": "2.*"
    },
    "require-dev": {
        "deptrac/deptrac": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "infection/infection": "^0.29",
        "nyholm/symfony-bundle-test": "^3.0",
        "phpro/grumphp": "^2.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "symkit/bundle-ai-kit": "^0.0.5",
        "symfony/asset-mapper": "^7.0 || ^8.0"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "symkit/bundle-ai-kit": true
        }
    },
    "extra": {
        "bundle-ai-kit": {
            "editors": ["cursor"],
            "skills": [
                "symfony-bundle-core",
                "symfony-bundle-ux",
                "symfony-bundle-doctrine",
                "symfony-bundle-flex",
                "symfony-bundle-quality"
            ]
        }
    }
}
